.title-for-portfolio-single
	margin 0 auto
	display table

.rigth-side
	padding 0 30px

.left-side
	float left
	padding 0 30px
	
.left-side img 
	max-width 400px

.no-bottom-padding
	padding-bottom 0 !important

.side-full-description
	font-size 15px
	padding 10px 0
	margin 0
	font-family 'Playfair Display'

.side-technology, .side-origin
	text-transform uppercase
	padding 30px 0 0 0
	margin 0
	font-size 15px
	color greyText
	letter-spacing 1.5px

.side-technology span, .side-origin span
	display block 
	padding 10px 0
	color weryLightGrey
	text-transform none
	letter-spacing 0

.side-work-gallery
	width 100%

.side-work-gallery > img
	width 100%
	margin 20px 0
	padding 0 10px

.side-work-gallery > div 
	display table 
	margin 0 auto

@media screen and (max-width: 1280px)	
	.container-of-slider .grid-item
		width 49.9% i


@media screen and (max-width: 820px)
	.container-of-slider .grid-item
		width 99.9% i

@media screen and (max-width: 820px)		
	.rigth-side
		padding 0 30px 0 0
		float right
		width calc(100% - 360px)

	.left-side
		float left
		padding 0 30px
		
	.left-side img 
		max-width 300px


@media screen and (max-width: 650px)
	.left-side img 
		max-width 100%
	
	.rigth-side
		padding 40px 30px
		width 100%
