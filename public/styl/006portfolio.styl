@import '001func.styl'

.outer-all-block-portfolio
	padding 15px
	background rgb(245, 245, 245)
	
.container-of-slider
	background rgb(245, 245, 245)

.container-of-slider img 
	width 100%

.discription-of-work
	opacity 0
	position absolute
	background-color rgba(0,0,0,.9)
	width calc(100% - 30px)
	height calc(100% - 30px)
	transition all .3s ease
	&:hover 
		opacity 1

.discription-of-work h3
	width 100%
	text-align center
	top 50%
	margin 0
	font-size 40px
	transform translateY(-50%)
	color #ffffff !important
	position absolute

.discription-of-work h3 span
	color #aaa
	display block
	margin-top 8px
	line-height 17px
	font-size 14px
	padding 0 50px


.grid-item
	padding 15px
	width 33%

