extends layout

block content
	include menu.jade
	div(class="container-all-outer grey-color")
		include allHeader.jade
		.container
			.row
				div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12 block-outer-team")
					nav(class="outer-of-breadcrumps")
						ul(class="list-of-breadcrumps")
							each val in breadcrumps
								if(val.link)
									li 
										a(href=val.link)= val.inRus
								else
									li= val.inRus
					h1(class="title-of-h1")= texts.ABOUT
					p(class="mini-description")= texts.ABOUT_TEXT
			- for (var i = 0; i < data.about.length; i += 2)
				div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12 block-for-slides-campany "+ ((i == 2) ? "reverse" : "") )
				- for (var j = i; j < 2+i; j++)  
					- if (data.about[j]['description_'+lang])
						div(class="-for-text")
							p= data.about[j]['description_'+lang]
					- else
						div(class="-for-photo")
							img(src= data.about[j].src, alt="")
						
	include footer.jade
	script(src="/build/controller.js")