extends layout

block content
	include menu.jade
	div(class="container-all-outer grey-color")
		include allHeader.jade
		.container
			.row
				div(class="col-lg-12 col-md-12 col-sm-12 col-xs-12 block-outer-team")
					nav(class="outer-of-breadcrumps")
						ul(class="list-of-breadcrumps")
							each val in breadcrumps
								if(val.link)
									li 
										a(href=val.link)= val.inRus
								else
									li= val.inRus
					h1(class="title-of-h1")= texts.TEAM
					p(class="mini-description")= texts.TEAM_TEXT
					.outer-of-team
						each value in data.team
							.item-team
								.outer-image-team
									img(src=value.src)
								h3= value['name_'+lang]
								h4= value.profession
								p= value['description_'+lang] 
		include footer.jade
	script(src="/build/controller.js")