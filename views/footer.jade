div(class="container-fluid -light-blue -side-for-logo")
	.row
		.container
			.row
				div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12")
					.container-for-subscribe
						h2= texts.UPDATES
						form(action="" class="form-to-control")
							input(type="text" class="form-input col-xs-12 col-sm-7 col-md-8 col-lg-8" placeholder="#{texts.MAIL}")
							button(class="button col-xs-12 col-sm-5 col-md-4 col-lg-4")= texts.SUBSCRIBE
						p(class="text-for-subscribe")= texts.POLICY
div(class="container-fluid -dark-grey")
	.row
		div(class="footer-container" itemscope itemtype="http://schema.org/Organization")
			div(class="col-xs-12 col-sm-5 col-md-4 col-lg-4")
				- var adress_tmp = data.contact ? data.contact[0] : data[0];
				- var adress = adress_tmp['adress_'+lang] && adress_tmp['adress_'+lang].split(";") ? adress_tmp['adress_'+lang].split(";") : []
				each contact in adress
					p(itemprop="streetAddress")= contact
				p(itemprop="email") E-mail: support@4side.in.ua
			div(class="col-xs-12 col-sm-2 col-md-4 col-lg-4 -center-align")
				span(class="mini-logo")
			div(class="col-xs-12 col-sm-5 col-md-4 col-lg-4 -rigth-align")
				p(itemprop="name") Â© 2016 4SIDE Web Agency All rights reserved
				.social-share-button
					a(href="https://vk.com/4sideWebAgency" target="_blank" class="vk social-link")
					a(href="https://www.facebook.com/groups/1586755234985038/" target="_blank" class="fb social-link")
					a(href="https://twitter.com/4sideAgency" class="twitter social-link")